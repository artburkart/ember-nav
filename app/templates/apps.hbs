<div class="col-xs-12 col-md-6 col-md-offset-3">
  <h1 class="text-center"><b>Applications</b></h1>
  <ul class="list-group">
    {{#each}}
      {{#link-to "app" this tagName="li" class="list-group-item clickable"}}
        <div class="row">
          <span class="col-xs-6">{{#link-to "app" this}}{{title}}{{/link-to}}</span>
          <div class="col-xs-6">
            <h5><b>Environments:</b></h5>
            <ul class="list-unstyled">
            {{#each environments}}
              <li>{{#link-to "environment" this}}{{title}}{{/link-to}}</li>
            {{/each}}
            </ul>
          </div>
        </div>
      {{/link-to}}
    {{/each}}
  </ul>
</div>
