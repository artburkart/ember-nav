{{#each crumb in breadCrumbs}}
  <li {{bind-attr class="crumb.isCurrent:current: :breadcrumb-trigger"}}>
  {{#if crumb.modelLink}}
    {{#link-to crumb.path crumb.model}}
      {{crumb.model.title}}
    {{/link-to}}
    {{crumby-dropdown siblings=crumb.siblings}}
  {{/if}}
  {{#if crumb.linkable}}
    {{#link-to crumb.path}}
      {{crumb.name}}
    {{/link-to}}
    {{crumby-dropdown siblings=crumb.siblings}}
  {{/if}}
  </li>
{{/each}}